{% extends "::base.html.twig" %}

{% block title %} Strona osoby {% endblock %}


{% block body %}
    
    <div class="container">
        <h3>Strona osoby</h3>
        <div class="row">
            <div class="col-md-8">
                <table class="table">
                    
                    <tr>
                        <th> Imię </th>
                        <td> {{ person.name }}
                    <tr>
                    <tr>
                        <th> Nazwisko </th>
                        <td> {{ person.surname}}
                    <tr>
                    <tr>
                        <th> Opis </th>
                        <td> {{ person.description }}
                    <tr>
                </table>
            </div>
            <div class="col-md-4">
                <a href="{{ path("addressbook_person_showindex")}}" class="btn btn-large btn-info">Powrót na główną</a>
                <br><br>
                <a href="{{ path("addressbook_person_modify", {"id":person.id})}}" class="btn btn-large btn-warning">Zmień dane</a>
                <br><br>
                <a href="{{ path("addressbook_person_delete", {"id":person.id})}}" class="btn btn-large btn-danger">Usuń tą osobę</a>
            </div>
        </div>
            <hr>
        <div class="row">
            <div class="col-md-4">
                <h3> To są twoje telefony </h3>
                {% if person.phones | length > 0%}
                    <table class="table">
                        <tr>
                            <th> Numer</th>
                            <th> Typ </th>
                        </tr>
                        {% for phone in person.phones %}

                            <tr>
                                <td> {{ phone.number }} </td>
                                <td> {{ phone.type }} </td>
                            </tr>  
                        {% endfor %}
                    </table>
                {% else %}
                    <p> Nie ma telefonu </p>

                {% endif %}
            </div>
            <div class="col-md-4">
                <h3> To są adresy </h3>
                {% if person.addresses | length > 0%}
                    <table class="table">
                        <tr>
                            <th> Miasto</th>
                            <th> Ulica i nr </th>
                        </tr>
                        {% for address in person.addresses %}

                            <tr>
                                <td> {{ address.city }}  </td>
                                <td>  {{ address.street }} {{ address.homeNumber }} / {{ address.localNumber }} </td>
                            </tr>  
                        {% endfor %}
                    </table>
                {% else %}
                    <p> Nie ma adresu </p>

                {% endif %}
            </div>
            <div class="col-md-4">
                <h3> To są emaile </h3>
                {% if person.emails | length > 0%}
                    <table class="table">
                        <tr>
                            <th> Email</th>
                            <th> Typ </th>
                        </tr>
                        {% for email in person.emails %}

                            <tr>
                                <td> {{ email.address }}  </td>
                                <td>  {{ email.type }} </td>
                            </tr>  
                        {% endfor %}
                    </table>
                {% else %}
                    <p> Nie ma adresu email </p>

                {% endif %}
            </div>
            
        </div>
    </div>

{% endblock %}
